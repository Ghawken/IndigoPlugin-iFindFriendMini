            </State>
            <State id="locationTimestamp">
                <ValueType>String</ValueType>
                <TriggerLabel>locationTimeStamp</TriggerLabel>
                <ControlPageLabel>locationTimeStamp</ControlPageLabel>
            </State>
            <State id="timestamp">
                <ValueType>String</ValueType>
